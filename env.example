# Unified Lighting Analyzer - Environment Configuration
# Copy this file to .env and modify the values as needed

# OCR Configuration
TESSERACT_CMD=C:/Program Files/Tesseract-OCR/tesseract.exe

# Web Interface Configuration
WEB_HOST=localhost
WEB_PORT=8501
WEB_DEBUG=false

# Database Configuration
VECTOR_DB_PATH=./data/vector_db
MODEL_PATH=./models

# Processing Configuration
DEFAULT_TARGET_LANGUAGE=en
DEFAULT_EXTRACTION_METHOD=pdfplumber
DEFAULT_CHUNK_SIZE=1000
DEFAULT_BATCH_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Standards Configuration
STANDARDS_DB_PATH=./data/standards_db.json
SIMILARITY_THRESHOLD=0.7
COMPLIANCE_THRESHOLD=0.8

# Dialux Analysis Configuration
DIALUX_OUTPUT_DIR=./data/dialux_reports
COMPLIANCE_OUTPUT_DIR=./data/compliance_reports
DEFAULT_STANDARDS=EN_12464_1,BREEAM

# File Upload Configuration
MAX_FILE_SIZE=100
ALLOWED_EXTENSIONS=pdf,txt,docx
